<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="animaizinhos.android.com.animaizinhos.ViewModel.Activity.Login"
    android:background="@drawable/bg_ovelha">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/caixaNomeId"
        android:background="#ffffff"
        android:paddingLeft="15dp"
        android:layout_above="@+id/botaoId"
        android:layout_alignLeft="@+id/botaoId"
        android:layout_alignStart="@+id/botaoId"
        android:layout_marginBottom="25dp"
        android:layout_alignRight="@+id/botaoId"
        android:layout_alignEnd="@+id/botaoId" />

    <TextView
        android:text="Qual seu nome?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:id="@+id/textView"
        android:layout_above="@+id/caixaNomeId"
        android:layout_alignLeft="@+id/caixaNomeId"
        android:layout_alignStart="@+id/caixaNomeId"
        android:layout_marginBottom="17dp"
        android:layout_alignRight="@+id/caixaNomeId"
        android:layout_alignEnd="@+id/caixaNomeId" />

    <TextView
        android:text="Bem Vindo!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="30sp"
        android:id="@+id/textId"
        android:textColor="#ffffff"
        android:layout_marginBottom="47dp"
        android:layout_above="@+id/caixaNomeId"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <Button
        android:text="Entrar"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:id="@+id/botaoId"
        android:layout_marginBottom="26dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
